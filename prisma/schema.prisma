// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id
  createdAt  DateTime @default(now())
  sex        String
  age        Int
  occupation String?
  field      String?
  education  String?
  usage      String
  workplace  String
  step       Int      @default(0)
  done       Boolean  @default(false)
  tasks      Task[]
}

model Task {
  id      Int     @id @default(autoincrement())
  taskId  Int
  time    Int
  correct Boolean
  userId  String
  user    User    @relation(fields: [userId], references: [id])
}
